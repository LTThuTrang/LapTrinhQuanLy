@model IEnumerable<LTTTBaiTapLon671.Models.User>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Người sử dụng</h2>

<p>
    @Html.ActionLink("Thêm mới", "Create")
</p>
<table class="table">
    <tr>
        <th>
       Người sử  dụng
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
